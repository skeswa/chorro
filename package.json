{
  "name": "chorro",
  "private": true,
  "scripts": {
    "test": "turbo run test",
    "prepare": "husky install",
    "reset": "git-delete-squashed main"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "git-branch-is": "^4.0.0",
    "git-delete-squashed": "^1.0.4",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.0.23"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "lint",
          "^build"
        ]
      },
      "deploy": {
        "dependsOn": [
          "build",
          "test",
          "lint"
        ]
      },
      "dev": {
        "cache": false
      },
      "lint": {
        "outputs": []
      },
      "format": {},
      "test": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
